/* component/end/end.wxss */

.clearfix:before, .clearfix:after {
  display: table;
  content: " ";
}

.clearfix:after {
  clear: both;
}

.end {
  text-align: center;
  width: 100%;
  height: 40rpx;
  padding-bottom: 40rpx;
}

.endtext {
  position: relative;
  line-height: 40rpx;
  width: 100rpx;
  text-align: center;
  top: 50%;
}

/*CSS伪类用法*/

.endtext:after, .endtext:before {
  position: absolute;
  top: 50%;
  background: #ddd;
  content: "";
  height: 1px;
  width: 100rpx;
}

.endtext:after {
  right: -150rpx;
}

.endtext:before {
  left: -150rpx;
}